---
import PageLayout from '~/layouts/PageLayout.astro';

const requests = [
  { client: "Alice", service: "Web Development", status: "Paid", requirements: "Landing page, blog", update: "In Progress" },
  { client: "Bob", service: "AI Integration", status: "Pending", requirements: "Chatbot", update: "Awaiting Payment" },
];
---
<PageLayout>
  <section class="max-w-4xl mx-auto py-16">
    <h1 class="text-3xl font-bold mb-6">Admin Panel</h1>
    <table class="w-full table-auto border">
      <thead>
        <tr>
          <th class="p-2 border">Client</th>
          <th class="p-2 border">Service</th>
          <th class="p-2 border">Payment Status</th>
          <th class="p-2 border">Requirements</th>
          <th class="p-2 border">Update Status</th>
        </tr>
      </thead>
      <tbody>
        {requests.map(r => (
          <tr>
            <td class="p-2 border">{r.client}</td>
            <td class="p-2 border">{r.service}</td>
            <td class="p-2 border">{r.status}</td>
            <td class="p-2 border">{r.requirements}</td>
            <td class="p-2 border">{r.update}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>
</PageLayout>
