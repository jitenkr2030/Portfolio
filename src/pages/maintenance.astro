---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Maintenance & Support Plans - Ensuring Your Digital Success',
  description: 'Comprehensive maintenance and support services to keep your web applications running smoothly and securely.',
};
---

<Layout metadata={metadata}>
  <Hero
    title="Maintenance & Support Plans"
    subtitle="Keep your digital solutions running at peak performance with our comprehensive maintenance and support services"
  />

  <Features
    title="Support Services"
    subtitle="Comprehensive care for your digital investments"
    items={[
      {
        title: 'Regular Updates',
        description: 'Keep your systems current with the latest security patches and feature updates.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Performance Monitoring',
        description: 'Continuous monitoring of application performance and server health.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Security Audits',
        description: 'Regular security assessments and vulnerability testing.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Technical Support',
        description: '24/7 support for critical issues and timely resolution of technical problems.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <Content
    isReversed
    title="Maintenance Packages"
    subtitle="Choose the right level of support for your needs"
    items={[
      {
        title: 'Essential Maintenance',
        description: 'Basic maintenance package including regular updates and security patches.',
      },
      {
        title: 'Professional Care',
        description: 'Enhanced support with performance optimization and priority response.',
      },
      {
        title: 'Enterprise Support',
        description: 'Comprehensive support with dedicated team and custom SLAs.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1563986768609-322da13575f3?ixlib=rb-4.0.3',
      alt: 'Support Services',
    }}
  />

  <FAQs
    title="Support FAQs"
    subtitle="Common questions about our maintenance services"
    items={[
      {
        title: 'What is included in regular maintenance?',
        description: 'Regular maintenance includes security updates, performance optimization, backup management, and basic technical support.',
      },
      {
        title: 'How quickly do you respond to support requests?',
        description: 'Response times vary by support tier. Critical issues are addressed within 1-4 hours, while standard requests are handled within 24-48 hours.',
      },
      {
        title: 'Can I upgrade my support plan?',
        description: 'Yes, you can upgrade your support plan at any time to access additional features and faster response times.',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>
</Layout>