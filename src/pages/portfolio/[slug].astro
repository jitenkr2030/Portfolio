---
export async function getStaticPaths() {
  const portfolioItems = [
    { slug: 'e-commerce-website', title: 'E-commerce Website', description: 'A full-featured online store', tech: ['React', 'Node.js', 'Stripe'] },
    { slug: 'social-media-dashboard', title: 'Social Media Dashboard', description: 'Analytics dashboard for social media', tech: ['Vue.js', 'Express', 'MongoDB'] },
    { slug: 'mobile-fitness-app', title: 'Mobile Fitness App', description: 'Cross-platform fitness tracking application', tech: ['React Native', 'Firebase', 'GraphQL'] }
  ];

  return portfolioItems.map(item => ({
    params: { slug: item.slug },
    props: { project: item }
  }));
}

import PageLayout from '~/layouts/PageLayout.astro';
const { slug } = Astro.params;
const { project } = Astro.props;
---
<PageLayout>
  <section class="max-w-3xl mx-auto py-16">
    <h1 class="text-4xl font-bold mb-4">{project.title}</h1>
    <img src={project.image || '/assets/images/default.png'} alt={project.title} class="rounded mb-6" />
    <p class="mb-4">{project.description}</p>
    <div>
      <strong>Technologies:</strong>
      <ul class="flex gap-2 mt-2">
        {project.tech.map(t => <li class="bg-gray-200 px-2 py-1 rounded text-sm">{t}</li>)}
      </ul>
    </div>
  </section>
</PageLayout>