---
export async function getStaticPaths() {
  const services = [
    { slug: 'web-development', title: 'Web Development', description: 'Custom web development solutions', price: '$999', features: ['Responsive Design', 'SEO Optimization', 'Performance Tuning'] },
    { slug: 'mobile-development', title: 'Mobile Development', description: 'Native and cross-platform mobile apps', price: '$1499', features: ['iOS & Android', 'User-friendly UI', 'Push Notifications'] },
    { slug: 'cloud-consulting', title: 'Cloud Consulting', description: 'Expert cloud architecture and deployment', price: '$799', features: ['AWS/Azure/GCP', 'Scalability', 'Security'] }
  ];

  return services.map(service => ({
    params: { service: service.slug },
    props: { serviceData: service }
  }));
}

import PageLayout from '~/layouts/PageLayout.astro';
const { service } = Astro.params;
const { serviceData } = Astro.props;
---
<PageLayout>
  <section class="max-w-3xl mx-auto py-16">
    <h1 class="text-4xl font-bold mb-4">{serviceData.title}</h1>
    <p class="mb-4">{serviceData.description}</p>
    <div class="mb-4"><strong>Price:</strong> {serviceData.price}</div>
    <ul class="list-disc ml-6">
      {serviceData.features.map(f => <li>{f}</li>)}
    </ul>
    <a href="/book" class="btn btn-primary mt-6 inline-block">Book Now</a>
  </section>
</PageLayout>
