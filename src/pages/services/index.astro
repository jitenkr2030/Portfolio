---
import PageLayout from '~/layouts/PageLayout.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import Button from '~/components/ui/Button.astro';

const services = [
  { title: "Web Development", description: "Modern, fast, and scalable websites.", icon: "tabler:code", cta: { text: "Book Now", href: "/book", variant: "primary" } },
  { title: "AI Integration", description: "Add AI features to your business.", icon: "tabler:robot", cta: { text: "Book Now", href: "/book", variant: "primary" } },
  { title: "WordPress Plugins", description: "Custom plugins for your needs.", icon: "tabler:plug", cta: { text: "Book Now", href: "/book", variant: "primary" } },
  { title: "Hosting Setup", description: "Secure and reliable hosting.", icon: "tabler:server", cta: { text: "Book Now", href: "/book", variant: "primary" } },
];

const pricingOptions = [
  { title: "Starter", price: "$299", features: ["1 Page Website", "Basic SEO", "1 Month Support"] },
  { title: "Business", price: "$799", features: ["Up to 5 Pages", "SEO & Analytics", "3 Months Support"] },
  { title: "Pro", price: "$1499", features: ["Unlimited Pages", "Advanced Integrations", "1 Year Support"] },
];
---

<PageLayout>
  <Features3
    title="Services"
    subtitle="What I Offer"
    items={services.map(s => ({ ...s, action: s.cta }))}
  />

  <Pricing
    title="Pricing Options"
    subtitle="Choose a package that fits your needs"
    items={pricingOptions}
  />
</PageLayout>
