---
import Layout from '~/layouts/PageLayout.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Book a Service - Jitender Kumar',
};
---

<Layout metadata={metadata}>
  <div class="bg-gradient-to-b from-blue-50 to-white dark:from-slate-900 dark:to-slate-800 py-16 sm:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl md:text-6xl">
          Book Your Service
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Transform your digital presence with our professional services. Let's bring your vision to life.
        </p>
      </div>
    </div>
  </div>

  <Steps
    class="max-w-3xl mx-auto"
    title="Simple Process"
    subtitle="Your project is just three steps away"
    items={[
      {
        title: 'Choose a Service',
        description: 'Browse our range of professional development services and select the one that matches your needs.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Project Details',
        description: 'Tell us about your project requirements, timeline, and specific preferences.',
        icon: 'tabler:file-description',
      },
      {
        title: 'Review & Payment',
        description: 'Review your project details and proceed with our secure payment process.',
        icon: 'tabler:credit-card',
      },
    ]}
  />

  <div class="py-16 sm:py-20">
    <Features2
      title="Expert Services"
      subtitle="Choose the service that will help you achieve your goals"
      highlight="Our Offerings"
      items={[
        {
          title: 'Web Development',
          description: 'Get a modern, fast, and responsive website built with the latest technologies. Perfect for businesses looking to establish a strong online presence.',
          price: 'Starting from ₹25,000',
          features: [
            'Custom Design',
            'Mobile Responsive',
            'SEO Optimized',
            '3 Months Support'
          ],
          callToAction: {
            text: 'Select Service',
            href: '#booking-form',
          },
        },
        {
          title: 'AI Integration',
          description: 'Enhance your business with cutting-edge AI solutions. From chatbots to data analysis, we help you leverage the power of artificial intelligence.',
          price: 'Starting from ₹35,000',
          features: [
            'Custom AI Models',
            'API Integration',
            'Performance Analytics',
            'Ongoing Support'
          ],
          callToAction: {
            text: 'Select Service',
            href: '#booking-form',
          },
        },
        {
          title: 'WordPress Solutions',
          description: 'Get a professional WordPress website or custom plugin. We ensure your site is fast, secure, and easy to manage.',
          price: 'Starting from ₹20,000',
          features: [
            'Custom Theme',
            'Plugin Development',
            'Security Setup',
            'Performance Optimization'
          ],
          callToAction: {
            text: 'Select Service',
            href: '#booking-form',
          },
        },
      ]}
    />
  </div>

  <div id="booking-form" class="py-16 px-4 mx-auto max-w-3xl lg:py-20">
    <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-xl border border-gray-200 dark:border-gray-700">
      <h2 class="text-3xl font-bold mb-2 text-center bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">
        Start Your Project
      </h2>
      <p class="text-center text-gray-600 dark:text-gray-400 mb-8">Fill in your project details and we'll get back to you within 24 hours</p>
      
      <form class="space-y-8" action="/api/submit-requirements" method="POST">
        <div class="grid gap-8 sm:grid-cols-2">
          <div>
            <label class="block text-sm font-medium mb-2" for="name">
              Your Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 dark:bg-slate-900"
              required
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium mb-2" for="email">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 dark:bg-slate-900"
              required
            />
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="service">
            Select Service
          </label>
          <select
            id="service"
            name="service"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 dark:bg-slate-900"
            required
          >
            <option value="">Choose a service...</option>
            <option value="web-development">Web Development</option>
            <option value="ai-integration">AI Integration</option>
            <option value="wordpress">WordPress Solutions</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="budget">
            Budget Range
          </label>
          <select
            id="budget"
            name="budget"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 dark:bg-slate-900"
            required
          >
            <option value="">Select your budget range...</option>
            <option value="20k-50k">₹20,000 - ₹50,000</option>
            <option value="50k-100k">₹50,000 - ₹1,00,000</option>
            <option value="100k+">₹1,00,000+</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="description">
            Project Description
          </label>
          <textarea
            id="description"
            name="description"
            rows="6"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 dark:bg-slate-900"
            placeholder="Please describe your project requirements, timeline, and any specific features you need..."
            required
          ></textarea>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="timeline">
            Expected Timeline
          </label>
          <select
            id="timeline"
            name="timeline"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 dark:bg-slate-900"
            required
          >
            <option value="">Choose expected timeline...</option>
            <option value="urgent">Urgent (Within 1 week)</option>
            <option value="normal">Normal (2-4 weeks)</option>
            <option value="relaxed">Relaxed (1-2 months)</option>
          </select>
        </div>

        <div class="flex items-center justify-center pt-4">
          <button
            type="submit"
            class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
          >
            Submit Project Details
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>