---
import Layout from '~/layouts/PageLayout.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Book a Service - Jitender Kumar',
};
---

<Layout metadata={metadata}>
  <Steps
    title="Book Your Service"
    subtitle="Follow these simple steps to get started with your project"
    items={[
      {
        title: 'Choose a Service',
        description: 'Select from our range of professional development services.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Project Details',
        description: 'Fill in your project requirements and preferences.',
        icon: 'tabler:file-description',
      },
      {
        title: 'Review & Payment',
        description: 'Confirm your project details and proceed with secure payment.',
        icon: 'tabler:credit-card',
      },
    ]}
  />

  <Features2
    title="Available Services"
    subtitle="Choose the service that best fits your needs"
    items={[
      {
        title: 'Web Development',
        description: 'Custom website development with modern frameworks',
        price: 'Starting from ₹25,000',
        callToAction: {
          text: 'Select Service',
          href: '#booking-form',
        },
      },
      {
        title: 'AI Integration',
        description: 'Implement AI solutions for your business',
        price: 'Starting from ₹35,000',
        callToAction: {
          text: 'Select Service',
          href: '#booking-form',
        },
      },
      {
        title: 'WordPress Solutions',
        description: 'Custom WordPress development and optimization',
        price: 'Starting from ₹20,000',
        callToAction: {
          text: 'Select Service',
          href: '#booking-form',
        },
      },
    ]}
  />

  <div id="booking-form" class="py-12 px-4 mx-auto max-w-6xl lg:py-16">
    <div class="bg-white dark:bg-slate-800 rounded-lg p-8 shadow-lg">
      <h2 class="text-3xl font-bold mb-8 text-center">Project Requirements</h2>
      <form class="space-y-6" action="/api/submit-requirements" method="POST">
        <div>
          <label class="block text-sm font-medium mb-2" for="service">
            Select Service
          </label>
          <select
            id="service"
            name="service"
            class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
            required
          >
            <option value="">Choose a service...</option>
            <option value="web-development">Web Development</option>
            <option value="ai-integration">AI Integration</option>
            <option value="wordpress">WordPress Solutions</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="description">
            Project Description
          </label>
          <textarea
            id="description"
            name="description"
            rows="4"
            class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
            required
            placeholder="Please describe your project requirements..."
          ></textarea>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="budget">
            Budget Range (in ₹)
          </label>
          <select
            id="budget"
            name="budget"
            class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
            required
          >
            <option value="">Select budget range...</option>
            <option value="20k-50k">₹20,000 - ₹50,000</option>
            <option value="50k-100k">₹50,000 - ₹1,00,000</option>
            <option value="100k+">₹1,00,000+</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="timeline">
            Expected Timeline
          </label>
          <select
            id="timeline"
            name="timeline"
            class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
            required
          >
            <option value="">Choose timeline...</option>
            <option value="1-2-weeks">1-2 weeks</option>
            <option value="2-4-weeks">2-4 weeks</option>
            <option value="1-2-months">1-2 months</option>
            <option value="2-3-months">2-3 months</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="email">
            Email Address
          </label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
            required
            placeholder="your@email.com"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-2" for="phone">
            Phone Number
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"
            placeholder="+91 XXXXXXXXXX"
          />
        </div>

        <div class="text-center">
          <button
            type="submit"
            class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors"
          >
            Submit Requirements
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>