---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Me - Jitender Kumar',
  description: 'Learn about my journey, skills, and experience in full-stack development and AI integration.'
};

const skills = [
  { title: "JavaScript & TypeScript", description: "Modern web development languages." },
  { title: "React & Astro", description: "Building fast, interactive UIs." },
  { title: "WordPress", description: "Custom themes and plugins." },
  { title: "Node.js & Python", description: "Backend development and API integration." },
  { title: "AI & Machine Learning", description: "Integration of AI solutions." },
  { title: "Cloud & DevOps", description: "AWS, Docker, and CI/CD pipelines." }
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Me"
    image={{
      src: '~/assets/images/profile.jpg',
      alt: 'Jitender Kumar Profile Picture',
    }}
  >
    <Fragment slot="title">
      Passionate about creating <br />
      <span class="text-accent dark:text-white">Innovative Digital Solutions</span>
    </Fragment>

    <Fragment slot="subtitle">
      With over 5 years of experience in full-stack development, I specialize in building scalable web applications
      and integrating AI solutions. My expertise spans across modern web technologies, cloud platforms, and artificial intelligence,
      enabling me to deliver comprehensive solutions for complex business challenges.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Years of Experience', amount: '5+' },
      { title: 'Projects Completed', amount: '50+' },
      { title: 'Client Satisfaction', amount: '100%' },
      { title: 'Technologies', amount: '15+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="My Skills"
    subtitle="Comprehensive expertise in modern web technologies and AI integration"
    items={skills}
  />
</Layout>