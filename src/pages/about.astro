---
import PageLayout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Steps from '~/components/widgets/Steps.astro';

const skills = [
  { title: "JavaScript & TypeScript", description: "Modern web development languages." },
  { title: "React & Astro", description: "Building fast, interactive UIs." },
  { title: "WordPress", description: "Custom themes and plugins." },
  { title: "AI/ML Integration", description: "OpenAI, chatbots, automation." },
];

const certifications = [
  { title: "Certified Web Developer", description: "W3Schools, 2022" },
  { title: "AI Specialist", description: "Coursera, 2023" },
];

const experience = [
  { title: "Freelance Web Developer", description: "2018–Present: Built 30+ websites for clients worldwide." },
  { title: "AI Consultant", description: "2021–Present: Integrated AI into business workflows." },
  { title: "WordPress Plugin Author", description: "2020–Present: Published 5+ plugins." },
];
---

<PageLayout>
  <Content
    title="About Me"
    subtitle="My background, skills, and journey."
    content="I'm Jitender Kumar, a passionate developer with a love for building digital solutions that make a difference."
  />

  <Features3
    title="Skills & Technologies"
    items={skills}
  />

  <Features3
    title="Certifications & Awards"
    items={certifications}
  />

  <Steps
    title="Experience"
    items={experience}
  />

  <Content
    title="My Story"
    content="From a curious learner to a professional developer, my journey has been driven by curiosity, creativity, and a desire to help others succeed online."
  />
</PageLayout>
