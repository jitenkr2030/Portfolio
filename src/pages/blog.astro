---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Blog - Technical Insights & Industry Trends',
  description: 'Explore articles on web development, AI solutions, and technology trends.',
};
---

<Layout metadata={metadata}>
  <Hero
    title="Technical Blog"
    subtitle="Insights, tutorials, and updates from the world of web development and AI"
  />

  <Features
    title="Latest Articles"
    subtitle="Stay updated with our latest insights and technical knowledge"
    items={[
      {
        title: 'Modern Web Development Practices',
        description: 'Exploring best practices in React, Node.js, and modern web frameworks.',
        icon: 'tabler:code',
      },
      {
        title: 'AI Integration Guide',
        description: 'How to effectively integrate AI solutions into web applications.',
        icon: 'tabler:brain',
      },
      {
        title: 'Cloud Architecture Tips',
        description: 'Best practices for scalable and secure cloud infrastructure.',
        icon: 'tabler:cloud',
      },
    ]}
  />

  <Content
    isReversed
    title="Featured Post"
    subtitle="Deep Dive into Modern Web Development"
    items={[
      {
        title: 'Building Scalable Applications',
        description: 'Learn about architecture patterns and best practices for building scalable web applications.',
      },
      {
        title: 'Performance Optimization',
        description: 'Tips and techniques for optimizing web application performance.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1461749280684-dccba630e2f6?ixlib=rb-4.0.3',
      alt: 'Web Development',
    }}
  />

  <Features
    title="Categories"
    subtitle="Browse articles by topic"
    columns={3}
    items={[
      {
        title: 'Web Development',
        description: 'Articles about frontend and backend development.',
        icon: 'tabler:code',
      },
      {
        title: 'AI & Machine Learning',
        description: 'Insights into AI implementation and use cases.',
        icon: 'tabler:brain',
      },
      {
        title: 'Cloud & DevOps',
        description: 'Topics covering cloud services and DevOps practices.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Security',
        description: 'Best practices for web application security.',
        icon: 'tabler:shield',
      },
      {
        title: 'Performance',
        description: 'Tips for optimizing application performance.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Industry Trends',
        description: 'Latest developments in technology and web development.',
        icon: 'tabler:trending-up',
      },
    ]}
  />
</Layout>