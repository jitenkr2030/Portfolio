---
import PageLayout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Content from '~/components/widgets/Content.astro';

const services = [
  { title: "Web Development", description: "Modern, fast, and scalable websites.", icon: "tabler:code" },
  { title: "AI Integration", description: "Add AI features to your business.", icon: "tabler:robot" },
  { title: "WordPress Plugins", description: "Custom plugins for your needs.", icon: "tabler:plug" },
  { title: "Hosting Setup", description: "Secure and reliable hosting.", icon: "tabler:server" },
];

const projects = [
  { title: "E-commerce Platform", description: "React, Stripe, Node.js", icon: "tabler:shopping-cart" },
  { title: "AI Chatbot", description: "Python, OpenAI, FastAPI", icon: "tabler:message" },
  { title: "Portfolio Site", description: "Astro, Tailwind, Vercel", icon: "tabler:world" },
];

const testimonials = [
  { name: "Alice", job: "CEO, Example Inc.", testimonial: "Fantastic work and great communication!" },
  { name: "Bob", job: "CTO, Startup", testimonial: "Delivered on time and exceeded expectations." },
];
---

<PageLayout>
  <Hero
    title="Jitender Kumar"
    subtitle="Building modern web experiences. Let’s create something amazing together."
    tagline="Web Developer • AI Integrator • WordPress Expert"
    actions={[
      { text: "Book a Service", href: "/book", variant: "primary" },
      { text: "View Portfolio", href: "/portfolio", variant: "secondary" }
    ]}
  />

  <Content
    title="Welcome!"
    subtitle="I help businesses and individuals build, launch, and grow their digital presence."
    content="With years of experience in web development, AI, and WordPress, I deliver solutions that work."
  />

  <Features3
    title="Services"
    subtitle="What I Offer"
    items={services}
  />

  <Content
    title="Featured Projects"
    subtitle="A selection of my best work"
    items={projects}
  />

  <Testimonials
    title="What Clients Say"
    testimonials={testimonials}
  />
</PageLayout>
