---
import PageLayout from '~/layouts/PageLayout.astro';
---
<PageLayout>
  <section class="max-w-2xl mx-auto py-16">
    <h1 class="text-3xl font-bold mb-6">Submit Project Requirements</h1>
    <form action="/api/requirements" method="POST" enctype="multipart/form-data" class="space-y-6 bg-white p-6 rounded shadow">
      <label class="block font-medium">Project Details</label>
      <textarea name="details" required class="input w-full min-h-[100px]"></textarea>
      <label class="block font-medium">Upload Files (optional)</label>
      <input type="file" name="files" multiple class="input" />
      <label class="block font-medium">Preferred Communication</label>
      <select name="communication" class="input">
        <option value="email">Email</option>
        <option value="whatsapp">WhatsApp</option>
        <option value="zoom">Zoom</option>
      </select>
      <button type="submit" class="btn btn-primary w-full">Submit</button>
    </form>
  </section>
</PageLayout>
